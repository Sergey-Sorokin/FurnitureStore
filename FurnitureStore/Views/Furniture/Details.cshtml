@model FurnitureStore.Models.Furniture

@{
    ViewBag.Title = "Предложение";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<h3>@Html.DisplayFor(model => model.Price)</h3>

<div class="content_i base-bg">
    <div class="layout_main">
        <div class="product_description-left">
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Producer.FullName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Producer.FullName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ArticleNo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ArticleNo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Size)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Size)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Color)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Color)
                </dd>

            </dl>

        </div>
    </div>
    <div class="product_photos-right">
        <div class="fotorama">
            @foreach (var img in Model.Images) {
                @Html.DisplayFor(model => img)
            }
        </div>
    </div>
    <div class="clearfix"></div>
</div>

@section Scripts {
    <script>
        fotoramaDefaults = {
            width: '100%',
            //maxwidth: 500,
            ratio: 16 / 9,
            allowfullscreen: 'native',
            nav: 'thumbs',
            autoplay: true
        }
    </script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.js"></script>
}

@section Styles {
    <link href="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet">
}
