@model FurnitureStore.Models.Furniture

@{
    ViewBag.Title = String.Format("{0} за {1:#,##0} KZT", Model.Name, Model.Price);
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<h3>@Html.DisplayFor(model => model.Price)</h3>

@if (!String.IsNullOrWhiteSpace(Model.ArticleNo)) {
    <h4>Артикул: @Html.DisplayFor(model => model.ArticleNo)</h4>
}

<div class="content_i base-bg">
    <div class="layout_main">
        <div class="product_description-left">
            @if (!String.IsNullOrWhiteSpace(Model.Description)) {
                <div class="product_text">
                    @Html.DisplayFor(model => model.Description)
                </div>
            }
            <div class="product_description">
                @if (Model.Producer != null && !String.IsNullOrWhiteSpace(Model.Producer.FullName)) {
                    <div class="product_description_param">
                        <strong>@Html.DisplayNameFor(model => model.Producer.FullName)</strong>
                        <p>@Html.DisplayFor(model => model.Producer.FullName)</p>
                    </div>
                }
                @if (!String.IsNullOrWhiteSpace(Model.Size)) {
                    <div class="product_description_param">
                        <strong>@Html.DisplayNameFor(model => model.Size)</strong>
                        <p>@Html.DisplayFor(model => model.Size)</p>
                    </div>
                }
                @if (!String.IsNullOrWhiteSpace(Model.Color)) {
                    <div class="product_description_param">
                        <strong>@Html.DisplayNameFor(model => model.Color)</strong>
                        <p>@Html.DisplayFor(model => model.Color)</p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="product_photos-right">
        <div class="fotorama">
            @foreach (var img in Model.Images) {
                @Html.DisplayFor(model => img)
            }
        </div>
    </div>
    <div class="clearfix"></div>
</div>

@section Scripts {
    <script>
        fotoramaDefaults = {
            width: '100%',
            //maxwidth: 500,
            ratio: 16 / 9,
            allowfullscreen: 'native',
            nav: 'thumbs',
            autoplay: true
        }
    </script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.js"></script>
}

@section Styles {
    <link href="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet">
}
