@model IEnumerable<FurnitureStore.Models.Producer>
@using FurnitureStore.Areas.Administration.ViewModels

@{
    ViewBag.Title = "Производители";
}

<h2>Производители</h2>

<p>
    @Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.Partial("_ControlPartial", new ControlViewModel {
                   Actions = Actions.Edit | Actions.Delete,
                   ID = item.ID
               })
            </td>
        </tr>
    }

</table>
