@model FurnitureStore.Areas.Administration.ViewModels.AccountRolesViewModel

@{
    ViewBag.Title = "Изменение";
}

<h2>Изменение пользователя</h2>
<br />

@using (Html.BeginForm("Edit", "Account")) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.User.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.User.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.User.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.User.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.User.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.User.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.User.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.User.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <br />

        <h4>Роли пользователя</h4>
        <br />

        <table class="table">
            <tr>
                <th>

                </th>
                <th>
                    Роль
                </th>
                <th>
                    Описание роли
                </th>
            </tr>
            @for (int i = 0; i < Model.Roles.Count(); i++) {
                <tr>
                    <td>
                        @Html.CheckBoxFor(m => m.Roles[i].Checked)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Roles[i].Name)
                        @Html.HiddenFor(m => m.Roles[i].Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Roles[i].Description)
                        @Html.HiddenFor(m => m.Roles[i].Description)
                    </td>
                </tr>
            }
        </table>

        <hr />

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
                @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

